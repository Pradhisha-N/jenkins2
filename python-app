pipeline {
    agent any

    stages {
        stage('Checkout Repository') {
            steps {
                // Correctly specify the branch in the git step
                git(url: 'https://github.com/Pradhisha-N/jenkins2.git', branch: 'main')
            }
        }
        
        stage('Install Dependencies') {
            steps {
                // Create virtual environment
                sh 'python3 -m venv venv'
                // Use Bash to activate the virtual environment and install dependencies
                sh 'bash -c "source venv/bin/activate && pip install -r requirements.txt"'
            }
        }
       
        stage('Run Tests') {
            steps {
                // Run tests inside the virtual environment
                sh 'source venv/bin/activate && pytest tests/'
            }
        }

        stage('Build Artifact') {
            steps {
                // Build the artifact inside the virtual environment
                sh 'source venv/bin/activate && python setup.py sdist'
            }
        }

        stage('Archive Artifact') {
            steps {
                // Archive the artifact
                archiveArtifacts artifacts: 'dist/*.tar.gz', fingerprint: true
            }
        }
    }
}
